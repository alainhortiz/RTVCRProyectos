{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('easyadmin/plugins/multiselect/css/multi-select.css') }}"/>
{% endblock %}

{% block body %}
    <!-- Alerta -->
    <div class="preload hidden">
        <div class="logo"></div>
        <div class="loader-frame">
            <div class="loader1" id="loader1"></div>
            <div class="loader2" id="loader2"></div>
        </div>
    </div>
    <!-- Header -->
    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4" id="formHeader">
                    <div class="col-lg-6 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">Empresas</h6>
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><a href="{{ path('inicio') }}"><i
                                                class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="{{ path('gestionarEmpresas') }}">Empresas</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Empresas</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6 ">
        <div class="row justify-content-center" id="formBuscar">
            <div class="col-lg-4 col-md-6 col-12">
                <div class="card card-user justify-content-center">
                    <div class="card-header">
                        <h2 class="card-title text-info font-weight-bold mb-4">Localizar Empresas</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row justify-content-center">
                                <div class="col-lg-12 col-md-12 col-12">
                                    <!-- Tabs with icons -->
                                    <div class="card shadow">
                                        <div class="card-body" style="background: #fdfdfd">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-11 col-10 pr-1">
                                                        <div class="form-group">
                                                            <label for="nombreEmpresa">Nombre</label>
                                                            <input type="text"
                                                                   class="form-control"
                                                                   placeholder="Teclee el Nombre de la Empresa"
                                                                   id="nombreEmpresa" name="nombreEmpresa">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-1 col-1 pr-1" style="padding-top: 35px">
                                                        <button disabled
                                                                class="btn btn-primary btn-icon-only rounded-circle"
                                                                type="button" id="btnBuscar" name="btnBuscar"
                                                                data-toggle="tooltip"
                                                                data-placement="top"
                                                                title="Localizar empresa">
                                                                <span class="btn-inner--icon"><i
                                                                            class="fas fa-search"></i></span>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row hidden" id="formAdicionar">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card card-user">
                    <div class="card-header">
                        <h2 class="card-title text-info font-weight-bold mb-4" id="nameAddNombre">NUEVA EMPRESA: </h2>
                    </div>
                    <div class="card shadow">
                        <div class="card-body" style="background: #fdfdfd">
                            <div class="row justify-content-center">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <!-- Tabs with icons -->
                                    <div class="nav-wrapper">
                                        <ul class="nav nav-pills nav-fill flex-column flex-md-row" id="tabs-icons-text"
                                            role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link mb-sm-3 mb-md-0 active" id="tabs-icons-text-1-tab"
                                                   data-toggle="tab" href="#tabs-icons-text-1" role="tab"
                                                   aria-controls="tabs-icons-text-1" aria-selected="true"><i
                                                            class="ni ni-cloud-upload-96 mr-2"></i>Generales</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link mb-sm-3 mb-md-0" id="tabs-icons-text-2-tab"
                                                   data-toggle="tab" href="#tabs-icons-text-2" role="tab"
                                                   aria-controls="tabs-icons-text-2" aria-selected="false"><i
                                                            class="fa fa-user mr-2 text-blue"></i>Conceptos
                                                    estatales</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link mb-sm-3 mb-md-0" id="tabs-icons-text-3-tab"
                                                   data-toggle="tab" href="#tabs-icons-text-3" role="tab"
                                                   aria-controls="tabs-icons-text-3" aria-selected="false"><i
                                                            class="fa fa-user-check mr-2 text-blue"></i>Servicios de
                                                    cuentas propistas</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="card shadow">
                                        <div class="card-body" style="background: #fdfdfd">
                                            <div class="tab-content" id="myTabContent">
                                                <div class="tab-pane fade show active" id="tabs-icons-text-1"
                                                     role="tabpanel" aria-labelledby="tabs-icons-text-1-tab">
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addTipoEmpresa">Tipo de Empresa</label>
                                                                <select class="form-control" id="addTipoEmpresa"
                                                                        name="addTipoEmpresa">
                                                                    <option value="0">Seleccione ...</option>
                                                                    {% for tipo in  tiposEmpresas %}
                                                                        <option value="{{ tipo.id }}">{{ tipo.nombre }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNIT">NIT</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el NIT" id="addNIT"
                                                                       name="addNIT">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNoAutorizada">No. Resolución
                                                                    autorizada</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el no."
                                                                       id="addNoAutorizada"
                                                                       name="addNoAutorizada">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addFechaAutorizada">Fecha autorizada</label><input
                                                                        type="text"
                                                                        class="form-control"
                                                                        placeholder="Seleccione"
                                                                        min="2020-01-01"
                                                                        step="1"
                                                                        id="addFechaAutorizada"
                                                                        name="addFechaAutorizada">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addCargoNoAutorizada">Autorizada por</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el cargo"
                                                                       id="addCargoNoAutorizada"
                                                                       name="addCargoNoAutorizada">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNoConstituida">No. Resolución
                                                                    constituida</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el no."
                                                                       id="addNoConstituida"
                                                                       name="addNoConstituida">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addFechaConstituida">Fecha de constituida</label><input
                                                                        type="text"
                                                                        class="form-control"
                                                                        placeholder="Seleccione"
                                                                        min="2020-01-01"
                                                                        step="1"
                                                                        id="addFechaConstituida"
                                                                        name="addFechaConstituida">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addCargoNoConstituida">Constituida por</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el cargo"
                                                                       id="addCargoNoConstituida"
                                                                       name="addCargoNoConstituida">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNoCuentaCUC">No. cuenta CUC</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el no. cuenta CUC" id="addNoCuentaCUC"
                                                                       name="addNoCuentaCUC">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addBancoCUC">Banco CUC</label>
                                                                <select class="form-control" id="addBancoCUC"
                                                                        name="addBancoCUC">
                                                                    <option value="0">Seleccione ...</option>
                                                                    {% for banco in  bancos %}
                                                                        <option value="{{ banco.id }}">{{ banco.nombre }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNoSucursalCUC">No. Sucursal Banco CUC</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el no. sucursal" id="addNoSucursalCUC"
                                                                       name="addNoSucursalCUC">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNoCuentaCUP">No. cuenta CUP</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el no. cuenta CUP" id="addNoCuentaCUP"
                                                                       name="addNoCuentaCUP">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addBancoCUP">Banco CUP</label>
                                                                <select class="form-control" id="addBancoCUP"
                                                                        name="addBancoCUP">
                                                                    <option value="0">Seleccione ...</option>
                                                                    {% for banco in  bancos %}
                                                                        <option value="{{ banco.id }}">{{ banco.nombre }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-md-4 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNoSucursalCUP">No. Sucursal Banco CUP</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el no. sucursal" id="addNoSucursalCUP"
                                                                       name="addNoSucursalCUP">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addNombreRepresentante">Nombre representante</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el nombre" id="addNombreRepresentante"
                                                                       name="addNombreRepresentante">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addCargoRepresentante">Cargo representante</label>
                                                                <input type="text" class="form-control"
                                                                       placeholder="Teclee el cargo" id="addCargoRepresentante"
                                                                       name="addCargoRepresentante">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-12 col-12 pr-1">
                                                            <div class="form-group">
                                                                <label for="addDireccion">Dirección</label>
                                                                <textarea class="form-control textarea"
                                                                          id="addDireccion" name="addDireccion"
                                                                          placeholder="Teclee la dirección"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="tab-pane fade" id="tabs-icons-text-2" role="tabpanel"
                                                     aria-labelledby="tabs-icons-text-2-tab">
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col-lg-12 col-12 pr-1">
                                                                    <div class="form-group">
                                                                        <label class="control-label "
                                                                               for="multi-cargos"><strong>Seleccione
                                                                                los conceptos:</strong></label>
                                                                        <select multiple="multiple" id="multi-cargos"
                                                                                name="multi-cargos"
                                                                                class="form-control">
                                                                            {% for cargo in cargos %}
                                                                                {% if cargo.isServicio != 1 %}
                                                                                    <option value={{ cargo.id }}>{{ cargo.nombre }}</option>
                                                                                {% endif %}
                                                                            {% endfor %}
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="tab-pane fade" id="tabs-icons-text-3" role="tabpanel"
                                                     aria-labelledby="tabs-icons-text-3-tab">
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col-lg-12 col-12 pr-1">
                                                                    <div class="form-group">
                                                                        <label class="control-label "
                                                                               for="multi-servicios"><strong>Seleccione
                                                                                los servicios:</strong></label>
                                                                        <select multiple="multiple" id="multi-servicios"
                                                                                name="multi-servicios"
                                                                                class="form-control">
                                                                            {% for cargo in cargos %}
                                                                                {% if cargo.isServicio == 1 %}
                                                                                    <option value={{ cargo.id }}>{{ cargo.nombre }}</option>
                                                                                {% endif %}
                                                                            {% endfor %}
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="update ml-auto mr-auto">
                                        <button type="button" class="btn btn-primary btn-round" id="btnAddGuardar"
                                                data-toggle="tooltip"
                                                data-placement="top"
                                                title="Guardar la persona">Aceptar
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-round" id="btnAddCancelar"
                                                data-toggle="tooltip"
                                                data-placement="top"
                                                title="Salir">Cancelar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="containerResultado"></div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('easyadmin/plugins/multiselect/js/jquery.multi-select.js') }}"></script>
    <script src="{{ asset('easyadmin/plugins/quicksearch/src/jquery.quicksearch.js') }}"></script>
    <script>
        $(document).ready(function () {

            (function () {
                {% if not (is_granted("ROLE_EMPRESA") or is_granted("ROLE_SUPERUSUARIO")) %}
                window.location.href = "{{ path('login') }}";
                {% else %}
                {% for nivel in app.user.nivelAccesos() if nivel == 'EMPRESA' %}
                {% else %}
                window.location.href = "{{ path('login') }}";
                {% endfor %}
                {% endif %}
            })();

            //Declaración de componentes
            $('#multi-cargos, #multi-servicios').multiSelect({
                selectableHeader: "<input type='text' class='search-input input-lg' autocomplete='off' placeholder='Buscar'>",
                selectionHeader: "<input type='text' class='search-input input-lg' autocomplete='off' placeholder='Buscar'>",
                afterInit: function(ms){
                    var that = this,
                        $selectableSearch = that.$selectableUl.prev(),
                        $selectionSearch = that.$selectionUl.prev(),
                        selectableSearchString = '#'+that.$container.attr('id')+' .ms-elem-selectable:not(.ms-selected)',
                        selectionSearchString = '#'+that.$container.attr('id')+' .ms-elem-selection.ms-selected';

                    that.qs1 = $selectableSearch.quicksearch(selectableSearchString)
                        .on('keydown', function(e){
                            if (e.which === 40){
                                that.$selectableUl.focus();
                                return false;
                            }
                        });

                    that.qs2 = $selectionSearch.quicksearch(selectionSearchString)
                        .on('keydown', function(e){
                            if (e.which == 40){
                                that.$selectionUl.focus();
                                return false;
                            }
                        });
                },
                afterSelect: function(){
                    this.qs1.cache();
                    this.qs2.cache();
                },
                afterDeselect: function(){
                    this.qs1.cache();
                    this.qs2.cache();
                }
            });

            //Declaración de variables
            var hoy = '{{ "now"|date('d-m-Y') }}';
            $("#addFechaAutorizada, #addFechaConstituida").datepicker({
                firstDay: 1,
                dateFormat: 'dd-mm-yy',
                changeMonth: true,
                changeYear: true,
                maxDate: hoy
            });

            //Declaración de variables
            var nombreEmpresa;

            {% if  (app.session.get('nombreEmpresa') !='' ) %}
            $('#nombreEmpresa').val('{{ app.session.get('nombreEmpresa') }}');
            {{ app.session.set('nombreEmpresa','') }}
            buscarEmpresa();
            {% endif %}

            //Formulario Buscar Empresa
            $('#nombreEmpresa').on("keyup", function () {
                if ($('#nombreEmpresa').val().trim().length > 0) {
                    $('#btnBuscar').prop("disabled", false);
                } else {
                    $('#btnBuscar').prop("disabled", true);
                }
            });

            $('#btnBuscar').on('click', function () {
                buscarEmpresa();
            });

            function buscarEmpresa() {
                if ($("#nombreEmpresa").val() !== '') {

                    $("#containerResultado").addClass('hidden');

                    nombreEmpresa ='';
                    nombreEmpresa = $("#nombreEmpresa").val();
                    var mat_datos = {nombreEmpresa: nombreEmpresa};

                    $(".preload").removeClass('hidden');

                    $.ajax({
                        type: "POST",
                        dataType: "html",
                        url: '{{ path("localizarEmpresa") }}',
                        data: mat_datos
                    }).done(function (data) {
                        $(".preload").addClass('hidden');

                        if (data.indexOf('dataEmpresas') !== -1) {

                            $('#containerResultado').replaceWith(data);
                            $('#containerResultado').removeClass('hidden');

                        } else {
                            alertify.confirm('Basic: false').set('message', '<strong>Esta empresa no está registrada, desea registrarla?</strong>')
                                .setHeader('<span class="glyphicon glyphicon-ban-circle" style="font-size: 20px"></span>' +
                                    '<h4 class="modal-title" style="display: inline-block; margin-left: 10px">Advertencia</h4>')
                                .set('onok', function () {
                                    limpiarAdicionar();
                                    $("#containerResultado").addClass('hidden');
                                    $("#formHeader").addClass('hidden');
                                    $("#formBuscar").addClass('hidden');
                                    $('#nameAddNombre').text("NUEVA EMPRESA: " + nombreEmpresa);
                                    $("#formAdicionar").removeClass('hidden');

                                });
                        }
                    });

                }
            }

            //Formulario Adicionar empresa

            $('#btnAddCancelar').on('click', function () {
                $("#formAdicionar").addClass('hidden');
                $("#formHeader").removeClass('hidden');
                $("#formBuscar").removeClass('hidden');
            });

            $('#btnAddGuardar').on('click', function () {

                //Validaciones

                if ($("#addTipoEmpresa").val() === '0') {
                    alertify.alert('<strong>El tipo de empresa es obligatorio, no puede quedar en blanco.</strong>')
                        .setHeader('<span class="glyphicon glyphicon-ban-circle" style="font-size: 20px"></span>' +
                            '<h4 class="modal-title" style="display: inline-block; margin-left: 10px">Error</h4>')
                        .set('label', 'Aceptar');
                    return false;
                }

                var concepto = 0;
                var servicio = 0;

                if (($('#ms-multi-cargos li.ms-elem-selectable ').hasClass('ms-selected'))) {
                    concepto = 1;
                }

                if (($('#ms-multi-servicios li.ms-elem-selectable ').hasClass('ms-selected'))) {
                    servicio = 1;
                }

                if (concepto === 0 && servicio === 0) {
                    alertify.alert('<strong>Debe definir al menos un concepto ó servicio que va a realizar esta empresa.</strong>')
                        .setHeader('<span class="glyphicon glyphicon-ban-circle" style="font-size: 20px"></span>' +
                            '<h4 class="modal-title" style="display: inline-block; margin-left: 10px">Error</h4>')
                        .set('label', 'Aceptar');
                    return false;
                }

                $(".preload").removeClass('hidden');

                var mat_datos = {
                    nombre: nombreEmpresa,
                    tipoEmpresa: $("#addTipoEmpresa").val(),
                    nit: $("#addNIT").val(),
                    noAutorizada: $("#addNoAutorizada").val(),
                    fechaAutorizada: $("#addFechaAutorizada").val(),
                    cargoAutorizada: $("#addCargoNoAutorizada").val(),
                    noConstituida: $("#addNoConstituida").val(),
                    fechaConstituida: $("#addFechaConstituida").val(),
                    cargoConstituida: $("#addCargoNoConstituida").val(),
                    noCuentaCUC: $("#addNoCuentaCUC").val(),
                    bancoCUC: $("#addBancoCUC").val(),
                    noSucursalCUC: $("#addNoSucursalCUC").val(),
                    noCuentaCUP: $("#addNoCuentaCUP").val(),
                    bancoCUP: $("#addBancoCUP").val(),
                    noSucursalCUP: $("#addNoSucursalCUP").val(),
                    nombreRepresentante: $("#addNombreRepresentante").val(),
                    cargoRepresentante: $("#addCargoRepresentante").val(),
                    direccion: $("#addDireccion").val(),
                    cargos: $("#multi-cargos").val(),
                    servicios: $("#multi-servicios").val(),
                    isConcepto: concepto,
                    isServicio: servicio
                };

                $.ajax({
                    type: "POST",
                    dataType: "html",
                    url: '{{ path("insertEmpresa") }}',
                    data: mat_datos
                }).done(function (data) {

                    $(".preload").addClass('hidden');

                    if (data.indexOf('dataEmpresas') !== -1) {

                        $('#containerResultado').replaceWith(data);
                        $("#containerResultado").removeClass('hidden');
                        limpiarAdicionar();
                        $("#formAdicionar").addClass('hidden');
                        $("#formHeader").removeClass('hidden');
                        $("#formBuscar").removeClass('hidden');

                    } else {
                        alertify.alert('<strong>' + data + '</strong>')
                            .setHeader('<span class="glyphicon glyphicon-ban-circle" style="font-size: 20px"></span>' +
                                '<h4 class="modal-title" style="display: inline-block; margin-left: 10px">Error</h4>')
                            .set('label', 'Aceptar')
                    }
                });

            });

            function limpiarAdicionar() {
                $("#nombreEmpresa").val('');
                $("#addNombre").val('');
                $("#addTipoEmpresa").val(0);
